<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
        <class>com.getjavajob.kovarnevm.phonebook.common.Address</class>
        <class>com.getjavajob.kovarnevm.phonebook.common.Phone</class>
        <class>com.getjavajob.kovarnevm.phonebook.common.Department</class>
        <class>com.getjavajob.kovarnevm.phonebook.common.Employee</class>
        <class>com.getjavajob.kovarnevm.phonebook.common.Image</class>
        <properties>
            <property name="hibernate.enable_lazy_load_no_trans" value="true"/>

            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>